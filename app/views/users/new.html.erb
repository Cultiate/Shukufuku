<% provide(:title, "新規登録") %>

<%= form_for(@user, url: signup_path) do |f| %>
<%= render 'shared/error_messages', model: @user %>
  <body>
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email %>

    <%= f.label :password, "パスワード" %>
    <%= f.password_field :password %>

    <%= f.submit "新規登録" %>
  </body>
<% end %>
